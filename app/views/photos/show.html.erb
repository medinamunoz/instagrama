<p id="notice"><%= notice %></p>

<p>
  <strong>Content:</strong>
  <%= @photo.content %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag(@photo.image, :style => 'img-responsive') if @photo.image? %>
</p>
<h2>Tags</h2>
<% if @photo.tags.any? %>
<ul>	
	<% @photo.tags.each do |tag|  %>
	<li><%= link_to tag, tag %> </li>
	<% end %>
</ul>
<% else %>
<p>none available</p>
<% end %>

